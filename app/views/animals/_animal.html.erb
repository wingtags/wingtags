<div class="module-profile-horizontal">
  
  	<div class="avatar">
  	  <img src="<%= animal.avatar_url %>">
  	</div>
<div class="profile-child">
  	<div class="profile-detail">
  	  <span class="profile-number"><%= animal.tag_code %></span>
  	</div>

  	<div class="profile-text">
      <span class="profile-name"><%= animal.name %></span><br/>	
  	  <p>Sighted <%= animal.observation_count %> times.<br/>
  	  	<%= animal.last_observed %></p>
  	</div>
  </div>
</div>
